<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="factory_path"
        android:title="@string/pref_title_factory_path"
        android:defaultValue="@string/pref_default_factory_path"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:singleLine="true"
        android:maxLines="1"
        android:enabled="false"/>

    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="kodi_player"
        android:title="@string/pref_title_kodi_player"
        android:defaultValue="-1"
        android:entries="@array/pref_kodi_player_list_titles"
        android:entryValues="@array/pref_kodi_player_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
